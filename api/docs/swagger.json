                },
                "endpoint": {
                    "type": "string"
                },
                "persistent_keepalive_interval": {
                    "type": "string"
                },
                "preshared_key": {
                    "type": "string"
                },
                "private_key": {
                    "type": "string"
                },
                "public_key": {
                    "type": "string"
                }
            }
