                "private_key": {
                    "description": "PrivateKey (base64) - if not provided, one will be generated",
                    "type": "string"
                },
                "table": {
                    "description": "Table routing table",
                    "type": "string"
                }
            }
        },
        "Error": {
            "type": "object",
